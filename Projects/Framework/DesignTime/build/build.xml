      </fileset>
      <fileset dir="${oracle.commons}/modules/oracle.xmlef">
        <include name="**/*.jar"/>
      </fileset>

      <fileset dir="${oracle.home}/ide/extensions">
        <include name="**/*.jar"/>
      </fileset>

      <fileset dir="${design.lib.dir}">
        <include name="*.jar"/>
      </fileset>

      <fileset dir="${oracle.home}/jdev/extensions">
        <include name="**/*.jar"/>
      </fileset>

      <fileset dir="${oracle.home}/ide/lib">
        <include name="**/*.jar"/>
      </fileset>

      <fileset dir="${oracle.home}/jdev/lib">
        <include name="**/*.jar"/>
      </fileset>

